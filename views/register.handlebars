<!doctype html>

<html lang="en">
	<head>
		<link rel = "icon" href = "avatars/avatar.png" type = "image/png">
		<meta charset="utf-8">
		<title>Create an Account</title>
		<meta name="description" content="Registration Form">
		<meta name="author" content="Jakub">
		{{!-- <link href="css/register.css" type="text/css" rel="stylesheet" /> --}}
        <link href="css/style.css" type="text/css" rel="stylesheet" />

	</head>
	<body>
        {{#if authorised}}
            {{>postLoginHeader}}
    {{else}}
            {{> header}}
    {{/if}}
		
		<section class="reg-form">
			<h1 class="register">E<a class="middle">xchange</a>BAY
				</h1>
			<h2 class="register">Create an Account</h2>
		
			<!--<form action="/register" enctype="multipart/form-data" method="post">-->
			<form name='regForm' action="/register" enctype="multipart/form-data" onsubmit="return validateForm()" method="post">
			<p>Username:<br /><input type="text" name="username" placeholder="your username(no spaces)" value="{{user}}" size="20"></p>
			<p>Forename:<br /><input type="text" name="forename" placeholder="your username(no spaces)" value="" size="20"></p>
			<p>Surname:<br /><input type="text" name="surname" placeholder="your username(no spaces)" value="" size="20" required></p>
			<p>Password:<br /><input type="password" name="pass" placeholder="your chosen password" value=""></p>
			{{!-- <p>Confirm password:<br /><input type="password" name="pass" placeholder="repeat your password" value=""></p> --}}
			<p>Email address:<br /><input type="email" name="email" placeholder="your email" value=""></p>
			<p>Profile Picture:<br /><input id="uploadBox" type="file"  name="avatar" >		
			<input type="submit"  class="myButton" value="Create"></p>	
			</form>
		</section>
		<footer >       {{> footer}}        </footer>
	</body>
</html>